<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg mt-5">
                    <div class="card-header">
                        <h1 class="title">Edit Gift List</h1>
                    </div>
                    <div class="card-body p-4">
                        <form action="/picker/edit/<%= user._id %>" method="post">
                            <div class="inputs">
                                <div class="form-floating">
                                    <input type="text" id="name" class="form-control" name="giftlist[name]" placeholder="Enter name" value="<%= user.name %>" required>
                                    <label for="name">Name</label>
                                </div>
                                <div class="form-floating">
                                    <input type="email" name="giftlist[email]" id="email" class="form-control" placeholder="Enter email" value="<%= user.email %>" required>
                                    <label for="email">E-mail</label>
                                </div>
                                <hr>
                                <% for (let a = 1; a <= user.gifts.length; a++) {%>
                                    <% if (a <= 3) {%>
                                        <div class="form-floating">
                                            <input type="text" name="giftlist[gift<%= a %>]" id="gift<%= a %>" class="form-control" placeholder="Gift Idea" value="<%= user.gifts[a - 1] %>" required>
                                            <label for="gift<%= a %>">Gift <%= a %></label>
                                        </div>
                                    <% }else{ %>
                                        <div class="extra">
                                            <div class="form-floating">
                                                <input type="text" name="giftlist[gift<%= a %>]" id="gift<%= a %>" class="form-control" placeholder="Gift Idea" value="<%= user.gifts[a - 1] %>" required>
                                                <label for="gift<%= a %>">Gift <%= a %></label>
                                            </div>
                                            <span class="badge text-bg-danger" title="Remove Gift">X</span>
                                        </div>
                                    <% } %>
                                <% } %>
                            </div>
                            <hr>
                            <div class="btn-group d-flex">
                                <button id="add" type="button" class="btn btn-primary" title="Add an extra gift idea!">+ Gift Idea</button>
                                <button class="btn btn-primary" title="Submit your gift list!">Submit</button>
                                <button id="cancel" type="button" class="btn btn-danger" title="Never Mind!">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/picker/app.entry.js"></script>
    <script src="/js/picker/app.edit.js"></script>